<div class="page-header">
  <h1>
    Sites
    <a href="/sites/new" class="btn btn-lg btn-success">New Site</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Hospital</th>
        <th>Site</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>

      <% @sites.each do |site| %>
      <tr>
        <td><%= site.hospital.name %></td>
        <td><%= site.name %></td>
        <td><%= site.phone %></td>

        <td>
          <a href="/sites/<%= site.id %>" class="btn btn-primary">Show</a>
          <% if current_user.role == "Radiologist" %>
            <a href="/sites/<%= site.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_site/<%= site.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
