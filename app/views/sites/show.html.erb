<div class="page-header">
  <h3>Site #<%= @site.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Hospital</dt>
      <dd><%= @site.hospital_id %></dd>

      <dt>Phone</dt>
      <dd><%= @site.phone %></dd>

      <dt>Name</dt>
      <dd><%= @site.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/sites" class="btn btn-primary">
        Back
      </a>
      <a href="/sites/<%= @site.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_site/<%= @site.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
