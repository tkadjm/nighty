<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Select Your Site</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/sites/choose">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for site_id -->
      <div class="form-group">
        <select name="site_id" class = "form-control">
          <% Site.all.each do |site| %>
            <option value="<%= site.id %>"> <%= site.hospital.name %>&nbsp;&nbsp;-->&nbsp;&nbsp;<%= site.name %> </option>
          <%end %>
        </select>
          <%#= select_tag(:site_id, options_from_collection_for_select(Site.order("name ASC"), :id, :name, @user.site_id), :class => "form-control") %>
        <p></p>
        <button class="btn btn-success form-control">
          Select
        </button>
      </div>
    </form>
  </div>
</div>


