<div class="page-header">
  <h1>
    Messages
    <a href="/messages/new" class="btn btn-lg btn-success">New Message</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Time</th>
        <th>From</th>
        <th>Site</th>
        <th>Hospital</th>
        <th>Header</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <td><%= message.created_at.strftime("%I:%M%p") %></td>
        <td><%= message.user.email %></td>
        <td><%= message.site.name %></td>
        <td><%= message.site.hospital.name %></td>
        <td><%= message.header %></td>
        <td>
          <a href="/messages/<%= message.id %>" class="btn btn-primary btn-xs">Show</a>
          <% if current_user.role == "Radiologist" %>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger btn-xs" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
